{% if section.settings.enable_ticker %}
  <link rel="stylesheet" href="{{ odometer-theme-minimal.css | asset_url }}">
  <script src="{{ odometer.min.js | asset_url }}" async></script>
  <div class="ticker-wrapper">
    {{ section.settings.enable_ticker }}

    <div class="odometer"></div>

    <div class="stats-subtitle-message">
      {{ section.settings['subtitle-message'] }}
    </div>
  </div>

  <script>
     let odometer1 = document.querySelector('.odometer');
    odometer1.innerHTML = 123000
  </script>
{% endif %}

{% schema %}
{
  "name": "Ticker Settings",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_ticker",
      "label": "Enable Ticker",
      "default": false
    },
    {
      "type": "text",
      "id": "subtitle-message",
      "label": "Sub Title Message"
    },
    {
      "type": "text",
      "id": "stat-1-text",
      "label": "Stat 1 Text (Right Hand Side)"
    },
    {
      "type": "number",
      "id": "stat-1-number",
      "label": "Stat 1 Number for ticker"
    },
    {
      "type": "text",
      "id": "stat-2-text",
      "label": "Stat 2 Text (Right Hand Side)"
    },
    {
      "type": "number",
      "id": "stat-2-number",
      "label": "Stat 2 Number for ticker"
    }
  ]
}
{% endschema %}

