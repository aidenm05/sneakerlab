{% comment %}
    Sneakerlab footer content
{% endcomment %}
<footer aria-label="Site Footer" role="contentinfo">
    <div class="pt-20 lg:pt-36 pb-20 grid grid-cols-12 gap-4 px-4 lg:px-5 xl:container xl:mx-auto">

        {% render 'newsletter' %}

        <nav class="lg:col-span-3 col-span-6">
            {% assign footer_menu_1 = linklists.footer-menu-1 %}

            <ul>
                {% for link in footer_menu_1.links %}
                    <li class="mb-2">
                        <a class="text-xs md:text-sm uppercase font-medium" href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>

        <nav class="lg:col-span-3 col-span-6">
            {% assign footer_menu_2 = linklists.footer-menu-2 %}

            <ul>
                {% for link in footer_menu_2.links %}
                    <li class="mb-2">
                        <a class="text-xs md:text-sm uppercase font-medium" href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</footer>

{% render 'colophon' %}
{% render 'popup-cookies' %}
{% render 'popup-newsletter' %}

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "mt-auto"
}
{% endschema %}
