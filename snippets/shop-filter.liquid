{% comment %}
    Renders Markup for filter
{% endcomment %}

<div class="filter-dropdown absolute invisible opacity-0 pointer-events-none z-10 bg-[#fff]/70 backdrop-blur w-full left-0 p-5 -bottom-72 top-full" aria-hidden="true" id="filter-dropdown">
    {% if collection.all_tags.size > 0 %}
        <ul class="tag-filters">
            <li class="text-2xl lg:text-5xl uppercase font-medium text-[#000]">
                {{ 'All,' | link_to: '/collections/all/', class: "filter-item hover:opacity-50 focus:opacity-50 transition-all" }}
            </li>
            {% for tag in collection.all_tags %}
                <li class="text-2xl lg:text-5xl uppercase font-medium text-[#000]">
                    {{ tag | link_to_tag: tag }}{% if forloop.last != true %},{% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
